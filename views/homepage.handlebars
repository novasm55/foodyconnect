{{#each foods as |food| }}
<div class="project-box">
  <div class="box-header">
    <h2 class="foodname">{{food.food_name}}</h2>
    <p>{{format_date food.date_created}}</p>
    <img src={{food.image}} alt="">


     <div class="username">
      <a href="/user/{{food.user_id}}">{{food.user.name}}</a>
      <a href="/user/{{food.user_id}}">{{food.user.username}}</a>
    </div>
  </div>
  <div class="box-description">
    <p>Cuisine: {{food.cuisine}}</p>
    <p>Description: {{food.description}}</p>
    <p>Ingredients: {{food.ingredients}}</p>
    <p>Cook time: {{food.cook_time}}</p>
  </div>
  <div class="comment-section"><h3>Comments</h3>
  {{#each comments as |comment| }}
      
        <div class="comment">  <a href="/user/{{comment.user_id}}">{{comment.username}}</a>
        <p>{{comment.comment}}</p> </div>
      {{/each}}
      <form class="comment-form">
      <textarea class="user-comment" placeholder="Write a comment"></textarea>
      <button class="comment-button" data-id="{{food.id}}">Submit</button>
    </form>
  </div>
  </div>
{{/each}}

<script src="./js/comment.js"></script>